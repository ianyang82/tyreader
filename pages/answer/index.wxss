/* pages/answer/index.wxss */
.top_but{
  flex-flow: row;
  display: flex;
  justify-content: flex-end;
  width: 100%
}
.top_but view{
   padding: 5px 10px; 
 color: #fff;
 font-size: 16px;
  border-radius: 3%;
 background: limegreen;
 margin-right: 10px;
}
.que_title{
  font-weight: 800;
  line-height: 40px;
}
.que_content{
  border: none;
  font-size: 16px;
  line-height: 30px;
  display: flex;
  flex-flow: column;
  align-items: center;
}
.que_note{
  padding: 10px 5px;
  border: 1px #bbb dotted;
  color: #666;
  line-height: 20px;
  text-indent: 2em;
}
.ans_list{
  height: 400px;
  font-size: 14px;
  color: #999;
}
.read_but{
 padding: 5px 10px;
 align-self: flex-end;
 color: #fff;
 font-size: 16px;
  border-radius: 3%;
 background: limegreen;
 margin-top: 10px;
}
.ans_item {
  flex-direction: row; 
  display: flex;
  border-bottom:  #eee 1px solid;
  padding: 10px 0;
}
.ans_content{
  flex: 100%;
  flex-direction: column;
  display: flex;
  font-size: 13px;
  color: dodgerblue;
}
.ans_head{
  flex-direction: column;
  text-align: center;
  font-size: 12px;
  color: #666;
}
.ans_head image {
  width: 60px;
  height: 60px;
  margin: 5px 10px;
  border-radius: 50%;
}
.msg_but{
  height: 30px;width: 100px; align-self: flex-start;
  display: flex;
  justify-content: center; flex-direction: column;
  background: limegreen; border-radius: 5px;opacity: 0.9;
  margin-top: 5px; 
}
.msg_but image{
  height: 15px; width: 15px; margin-left: 5px;
}
.msg_but .load_img{
  height:4px; 
}
.icon{
  width: 20px; height: 20px;
  padding:0px 5px;
}
.icon_hide{
  display: none;
}
.icon_list{
  flex-direction: row; 
  display: flex;
  align-self: flex-end;
  padding: 3px 0;
  color: #999;
}
.com_list{
  margin-left: 30px;
  font-size: 14px;
  color: #999;
  background-color: #eee;
  padding: 5px 3px;
}
.com_list text{
  color: dodgerblue;
}
.input_view{
  position: fixed;
  bottom: 0;
  flex-flow: row;
  display: flex;
  width: 100%;
  padding: 5px 0;
  background: #eee;
  align-items: center;
}
.input_view view{
  margin-left: 5px;
}
.input_view image{
  width: 30px;
  height: 30px;
}
.input_view input{
  background: #fff;
  width: 100%;
  margin: 0 5px;
  border: 1px #bbb solid;
  border-radius: 3px;
  color: #666;
  font-size: 13px;height: 30px;
  padding: 3px 1px;
}
.input_view .sound_but{
  height: 30px;
  padding: 2px 1px;
  width: 100%;
  font-size: 13px;
  text-align: center;
  line-height: 30px;
  border: 1px #bbb solid;border-radius: 3px;
}
.input_view .record_but{
  background: #bbb;
  color:#eee;
}
.comm_view{
  flex-flow: row;
  display: flex;
  align-items: center;
}
.comm_view .msg_but{
  margin-left: 3px;
  height: 20px;
}
.comm_view image{
  height: 10px;width: 10px
}