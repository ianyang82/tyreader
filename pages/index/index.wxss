/**index.wxss**/
.title-ab{
  text-align: left;
  font-size: 14px;
  text-indent: 2em;
}
.title-ab .tt{
  font-weight: 800;
  padding: 5px 0;
  text-align: center
}
.tip{
  font-weight: 800;
  margin: 10px;
  text-align: center
}
.tc-list{
  flex-flow: row;
  justify-content: space-around;
  display: flex;
  width: 100%;
}
.view-content{
  width: 90%;
}
.tc-item{
  flex-flow: column;
  align-items: center;
  align-content: center;
  display: flex;
  font-size: 14px;
  color: #999;
}
.tc-icon{
  width: 50px;height:50px;
  border-radius: 50%;
}
.usermotto {
  margin-top: 200px;
}

.que-list{
  height: 500px;
}
.item-title{
  font-size: 16px;
  font-weight: 400px;
}
.item-content{
  font-size: 14px;
  color: #666;
}
.item-foot{
  font-size: 12px;
  color: #666;
  padding-right: 10px;
  height: 20px;
}
.item-date{
  float: left;
}
.item-as{
  float: right;
}
/*mask*/ 
.drawer_screen { 
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 777;  
  background: #000;  
  opacity: 0.5;  
  overflow: hidden;  
} 
.drawer_content { 
  z-index: 999;
  background-color: #fff; 
  display:  flex; 
  position: fixed;  
  margin:0 10%;
  width: 70%;
  top: 30px;
  left: 0; 
  flex-flow: column;
  justify-content: center;
  align-items: center;
  padding: 20px 10px;
  border-radius: 5px;
} 
.tcg-icon{
  width: 200px;
  height: 200px;
  padding: 5px 5px;
  border: 1px solid #aaa;
}
.tc_name{
  font-size: 18px;
  color: #000;
  font-weight: bold;
  padding: 0 0 5px 0;
}
.tc_info{
  word-break: break-all;
  color: #666;
  width: 90%;
  padding: 3px 0;
  font-size: 16px;
  line-height: 24px;
}
.tc_title{
  padding: 5px 0;
  color: #548B54;
}
.navigator-arrow {
  padding-right: 26rpx;
  width: 30px;
}

.navigator-arrow {
  padding-right: 26rpx;
}
.navigator-arrow:after {
  content: " ";
  display: inline-block;
  height: 18rpx;
  width: 18rpx;
  border-width: 2rpx 2rpx 0 0;
  border-color: #888888;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  margin-top: -8rpx;
  right: 28rpx;
}
.scroll-view-item {
  position: relative;
  display: flex;
  align-items: center;
  padding-top: 10px;
  border-bottom: 1px #aaa solid;
}
.nav{
  flex-flow: row;
  display: flex;
  justify-content: flex-start;
  flex-wrap:  wrap;
  padding: 10px 0;
}
.nav view{
  background-color: #eee;
  text-align: center;
  line-height: 30px;
  font-size: 13px;
  height: 30PX;
  color: #666;
  border: 1px solid #ccc;
  padding: 0px 10px;
  margin: 5px 10px; 
}
.nav_focus{
  border: 1px solid limegreen !important;
  background-color: #fff !important;
  color: limegreen !important;
}