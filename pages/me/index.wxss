/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 16px;
}

.userinfo-avatar {
  width: 168rpx;
  height: 168rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 20px;
  width: 100%;
  font-size: 16px;
  color: #666;
  display: flex;
  flex-flow: row;
  justify-content: space-around;
  align-content: flex-start;
  flex-wrap:wrap;
}
.usermotto view{
  border: 1px solid #aaa;
  border-radius: 3px;
  text-align: center;
  line-height: 40px;
  margin-top: 10px;
  width: 40%
}