.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 14px;
}

.userinfo-avatar {
  width: 168rpx;
  height: 168rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 20px;
  width: 100%;
  font-size: 16px;
  color: #666;
}
.usermotto view{
  display: flex;
  flex-flow: row;
  justify-content: flex-start;
  border-bottom: 1px #eee solid;
  padding: 15px 5px 5px 5px;
}
.usermotto label{
  padding-right: 10px;
}
.usermotto textarea{
  width: 80%;
}
.usermotto button{
  width: 45%;
  font-size: 16px;
}
.usermotto .clear{
  border: none
}
.usermotto image{
  width:200px;height:200px
}
.upload_img{
  background-color: #eee;
  border: 1px solid #aaa;
}
.upload_img image{
  height: 100px;
  width: 100px;
  padding: 50px;
  opacity: 0.8;
}