/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content:space-around;
  padding: 20rpx 10px;
  box-sizing: border-box;
} 
.foot-view{
  text-align: center;
  color: #999;
  font-size: 12px;
  padding: 20px 0 10px;
}
.head-view{
  text-align: center;
  color: #fff;
  font-size: 16px;
  letter-spacing: 2px;
  font-weight:  bold;
  background: limegreen;
  flex-flow: row;
  align-items: center;
  justify-content: space-between;
  display: flex;
  padding: 8px 0;
  width: 100%;
}
.head-view .back{
  width: 23px;
  height: 23px;
  padding-left: 10px;
}
.head-view .home{
  width: 23px;
  height: 23px;
  padding-right: 10px;
}
.vuserinfo{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: #eee;justify-content: center;
  display: flex;
  flex-flow: column;
  color: #666;
}
.vuserinfo view{
  width: 100%;
}
.vuserinfo input{
  background: #fff;
  padding: 5px 0;
  margin: 10px 0;
}
.vuserinfo button{
  width: 100%;
}